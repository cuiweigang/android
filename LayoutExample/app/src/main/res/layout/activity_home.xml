<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.layout.com.layoutexample.HomeActivity">

    <!--头部-->
    <LinearLayout
        android:id="@+id/row0"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="42.5dp"
            android:layout_height="42.5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/header" />

        <LinearLayout
            android:id="@+id/row0_row1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7.5dp"
            android:layout_marginTop="16.5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="武林银泰ONLY专柜"
                android:textColor="#171717"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏数:"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="100"
                    android:textColor="#ff626c"
                    android:textSize="11sp" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="12.5sp"
            android:src="@drawable/right" />
    </LinearLayout>

    <!--主导航-->
    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row0"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/store_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/store_update_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/store_share_icon" />
        </LinearLayout>
    </LinearLayout>
    <!--九宫格 start-->
    <!--行一-->
    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row1"
        android:layout_marginTop="11dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/main_icon_ImageView"
                app:srcCompat="@drawable/main_icon_1" />

            <TextView style="@style/Split_line_horizontal" />
        </LinearLayout>

        <TextView style="@style/Split_line_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/main_icon_ImageView"
                app:srcCompat="@drawable/main_icon_2" />

            <TextView style="@style/Split_line_horizontal" />
        </LinearLayout>

        <TextView style="@style/Split_line_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/main_icon_ImageView"
                app:srcCompat="@drawable/main_icon_3" />

            <TextView style="@style/Split_line_horizontal" />
        </LinearLayout>
    </LinearLayout>

    <!--行二-->
    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row2"
        android:layout_weight="1"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/main_icon_ImageView"
                app:srcCompat="@drawable/main_icon_4" />

            <TextView style="@style/Split_line_horizontal" />
        </LinearLayout>

        <TextView style="@style/Split_line_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/main_icon_ImageView"
                app:srcCompat="@drawable/main_icon_5" />

            <TextView style="@style/Split_line_horizontal" />
        </LinearLayout>

        <TextView style="@style/Split_line_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/main_icon_ImageView"
                app:srcCompat="@drawable/main_icon_6" />

            <TextView style="@style/Split_line_horizontal" />
        </LinearLayout>
    </LinearLayout>

    <!--行二-->
    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row3"
        android:layout_weight="1"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/main_icon_ImageView"
                app:srcCompat="@drawable/main_icon_7" />

            <TextView style="@style/Split_line_horizontal" />
        </LinearLayout>

        <TextView style="@style/Split_line_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView style="@style/main_icon_ImageView" />

            <TextView style="@style/Split_line_horizontal" />
        </LinearLayout>

        <TextView style="@style/Split_line_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView style="@style/main_icon_ImageView" />

            <TextView style="@style/Split_line_horizontal" />
        </LinearLayout>
    </LinearLayout>
    <!--九宫格 end-->

</RelativeLayout>
