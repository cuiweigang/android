<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    tools:context="example.layout.com.layoutexample.MainActivity">

    <LinearLayout
        android:id="@+id/row0"
        android:layout_width="match_parent"
        android:layout_height="42sp"
        android:layout_marginTop="11sp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="12.5dp"
            android:text="用户名:"
            android:textColor="#333333"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="text"
            android:paddingLeft="7sp"
            android:textColor="#333333"

            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="42sp"
        android:layout_below="@+id/row0"
        android:layout_marginTop="1sp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_passord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="12.5dp"
            android:layout_marginRight="13sp"
            android:text="密码:"
            android:textColor="#333333"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="7sp"
            android:textColor="#333333"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/row1"
        android:layout_marginLeft="11.5dp"
        android:layout_marginRight="11.5dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/shape"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_marginTop="11sp">

        <TextView
            android:id="@+id/zhmmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_weight="1"
            android:text="找回密码"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/kszcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12sp"

            android:text="快速注册"
            android:textColor="#333333"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row2"
        android:layout_marginTop="41.5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="98dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="#333333"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="6.5dp"
            android:layout_marginRight="6.5dp"
            android:text="第三方快捷登陆"
            android:textColor="#333333"

            android:textSize="11sp" />

        <TextView
            android:layout_width="98dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="#333333"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row3"
        android:layout_marginTop="19dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/weixin_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="微信"
            android:layout_marginTop="2dp"
            android:textColor="#333333"
            android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>
